@model ApplicationCore.Models.CabModel
<div class="row">

    <form asp-action="UpdateCab" asp-route-cId="@Model.CabTypeId">
        @*Show Validation Info*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="CabTypeName">@Model.CabTypeName</label>
            <input asp-for="CabTypeName" class="form-control">
            <span asp-validation-for="CabTypeName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">UpdateOneCab</button>
    </form>
</div>